{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "./tmp",
    "declaration": false,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "downlevelIteration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "reflect-metadata"
    ],
    "lib": [
      "es6",
      "DOM"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}